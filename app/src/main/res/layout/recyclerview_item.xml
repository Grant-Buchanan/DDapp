<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"

    android:layout_height="72dp"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/textName"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="@color/buttonLabel"
        android:clickable="false"
        app:layout_constraintBaseline_toBaselineOf="@+id/textLevel"
        app:layout_constraintEnd_toStartOf="@+id/textLevel"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textLevel"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/buttonLabel"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textRace"
        app:layout_constraintStart_toEndOf="@+id/textName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textRace"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="@color/buttonLabel"
        android:clickable="false"
        app:layout_constraintBaseline_toBaselineOf="@+id/textLevel"
        app:layout_constraintEnd_toStartOf="@+id/textClass"
        app:layout_constraintStart_toEndOf="@+id/textLevel" />

    <TextView
        android:id="@+id/textClass"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="@color/buttonLabel"
        android:clickable="false"
        app:layout_constraintBaseline_toBaselineOf="@+id/textRace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textRace" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>